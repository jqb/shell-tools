# This is a simple template Makefile
# for C++ projects
.SUFFIXES: .c .cpp .o .x .h .hpp

CPP_UNIT_FLAGS =-L/usr/lib -lcppunit

# boost example:
# g++ regex.cpp -o regex -I $BOOST_ROOT -L/usr/local/bin -lboost_regex-gcc42-mt-1_38

TEST_SUITE_NAME = TestSuite
MAIN = Main

run:
	mkdir -p build/test
	g++ -o build/$(MAIN).x src/$(MAIN).cpp 
	./build/$(MAIN).x

runtest:
	mkdir -p build/test
	g++ -o build/test/$(TEST_SUITE_NAME).x test/$(TEST_SUITE_NAME).cpp  $(CPP_UNIT_FLAGS)
	./build/test/$(TEST_SUITE_NAME).x

clean:
	rm -rf build/

.PHONY: run runtest clean
