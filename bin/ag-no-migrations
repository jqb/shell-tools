#!/bin/bash
echo "======================================================================"
echo "USING 'ag' with:"
echo "    '--ignore-dir migrations'"
echo "    '--ignore-dir locale'"
echo "    '--ignore static/'"
echo "======================================================================"

AG="$(find /usr/bin/ -name ag)"
if [ "$AG" = "" ]; then
    AG="$(find /usr/local/bin/ -name ag)"
fi
exec $AG --ignore-dir migrations --ignore-dir locale --ignore-dir static/  "$@"
